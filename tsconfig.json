{
  "compilerOptions": {
    "allowJs": false,

    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,

    "resolveJsonModule": true,
    "removeComments": false,
    "jsx": "preserve",

    "target": "es5",
    "module": "esnext",
    "strict": true,
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "baseUrl": ".",
    "rootDir": "./src",
    "types": [
      "node",
      "vue",
      "vite/client"
    ],
    "paths": {
      "@/*": ["src/*"],
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "exclude": [
    "node_modules",
    "rollup.config.js"
  ],
  "include": [
    "src/global.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "files": [
    "src/types/shims-vue.d.ts"
  ]
}
